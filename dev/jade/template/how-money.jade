            figure.ab_slide.ab_slide--active.ab_slide--1
                .rev-img
                    img(src='img/how-slide-1.png')
                .count-slide
                    i.ico-slide.ico-slide--active.ico-slide--1(data-count='1') 1
                    i.ico-slide.ico-slide--2(data-count='2')
                    i.ico-slide.ico-slide--3(data-count='3')
