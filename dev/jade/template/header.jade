doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        link(rel='stylesheet', href='css/main.css')
        title Заявка на займ
    body
        #all
            header
                .logo
                    img(src='img/logo.png', alt='zaymigo')
                    a(href='tel: 88007007286') 8 800 700-72-86
                .info
                    h2
                        | Займ на
                        a.ab_link(href='#') вашу карту
                        |  за 10 минут
                    span Быстро, просто и без поручителей
                main
                    form(action='#')
                        label(for='sum')
                            .calc-title
                                span Сумма займа
                                input.range_field.range_field--sum(type='text', name='sum')
                            input#sum.slider.js-slider.js-slider--sum(type='range', min='1500', max='50000')
                        label(for='time')
                            .calc-title
                                span На срок до
                                input.range_field.range_field--time(type='text', name='time')
                            input#time.slider.js-slider.js-slider--time(type='range', min='1500', max='50000')
                        .info-zaym
                            // Информация о займе
                            .info-sum
                                span Занимаете
                                h4 6100 ₽
                            .info-back
                                span Возращаете
                                h4 6600 ₽
                        .ab_center
                            a.ab_button Получить деньги
            hr.separator
